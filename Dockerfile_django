# Используем официальный образ Python в качестве базового
FROM python:3.9-slim-buster

# Устанавливаем переменные окружения
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Устанавливаем зависимости для postgresql-client
RUN apt-get update && apt-get install -y postgresql-client

# Создаем директорию для нашего приложения
WORKDIR /app

# Копируем файлы зависимостей в директорию приложения
COPY req.txt /app/

# Устанавливаем зависимости
RUN pip install --no-cache-dir -r req.txt

# Копируем весь проект в директорию приложения
COPY . /app/

# Копируем скрипт entrypoint в контейнер и делаем его исполняемым
COPY ./entrypoint.sh /app/
RUN chmod +x /app/entrypoint.sh

# Запускаем сервер Django через скрипт entrypoint
CMD ["/app/entrypoint.sh", "db", "python", "manage.py", "runserver", "0.0.0.0:8000"]
